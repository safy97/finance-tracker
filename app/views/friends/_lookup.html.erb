<div id ="message"></div>
<h1>My friends</h1>
<h3>Search for friends</h3>
<div id="stock-lookup">
  <%= form_tag search_friends_path ,remote: true, method: :get , id: "friend-lookup-for" do %>
    <div class="form-group row no-padding text-center col-md-12">
      <div class="col-md-10">
        <%= text_field_tag :search, params[:search], palceholder: "Enter name or email",autofocus: true,class: "form-control search-box input-lg"%>
      </div>
      <div class="col-md-2">
        <%= button_tag(type: :submit,class: "btn btn-lg btn-success") do%>
          <span class="glyphicon glyphicon-search"></span> Search 
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div id="friends"></div>